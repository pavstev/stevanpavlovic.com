{
  "arrowParens": "always",
  "bracketSameLine": false,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "jsxSingleQuote": false,
  "printWidth": 100,
  "quoteProps": "as-needed",
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": false,
  "plugins": [
    "@prettier/plugin-xml",
    "prettier-plugin-astro",
    "prettier-plugin-packagejson",
    "prettier-plugin-sh",
    "prettier-plugin-sort-json",
    "prettier-plugin-toml",
    "prettier-plugin-yaml",
    "prettier-plugin-tailwindcss"
  ],
  "overrides": [
    {
      "files": "*.svg",
      "options": {
        "parser": "xml",
        "printWidth": 80
      }
    },
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    },
    {
      "files": ["*.yml", "*.yaml"],
      "options": {
        "singleQuote": false,
        "tabWidth": 2
      }
    },
    {
      "files": ["*.md", "*.mdx"],
      "options": {
        "printWidth": 80,
        "proseWrap": "always"
      }
    },
    {
      "files": ["*.json", ".prettierrc"],
      "options": {
        "parser": "json",
        "printWidth": 80
      }
    },
    {
      "files": ["*.jsonc", "*.code-workspace", "tsconfig.json", "wrangler.jsonc", ".vscode/*.json"],
      "options": {
        "parser": "jsonc",
        "printWidth": 80
      }
    },
    {
      "files": "*.toml",
      "options": {
        "printWidth": 100
      }
    },
    {
      "files": "*.sh",
      "options": {
        "parser": "sh",
        "tabWidth": 2
      }
    },
    {
      "files": "package.json",
      "options": {
        "parser": "json-stringify"
      }
    },
    {
      "files": ["*.css", "*.scss"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
