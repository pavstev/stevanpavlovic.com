---
import type { HTMLAttributes } from "astro/types";
import { cva, type VariantProps } from "class-variance-authority";
import { cn } from "../../lib/cn";
import Icon from "./Icon.astro";

const buttonVariants = cva(
  "inline-flex cursor-pointer items-center justify-center gap-2 font-medium tracking-wide whitespace-nowrap ring-offset-background transition-all duration-300 select-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 focus-visible:outline-none active:scale-[0.98] disabled:pointer-events-none disabled:opacity-50",
  {
    defaultVariants: {
      size: "md",
      variant: "primary",
    },
    variants: {
      size: {
        icon: "size-9 rounded-full",
        lg: "h-11 rounded-xl px-6 text-[15px]",
        md: "h-9 rounded-lg px-4 text-[13px]",
        sm: "h-8 rounded-md px-3 text-[12px]",
        xs: "h-7 rounded-md px-2.5 text-[11px]",
      },
      variant: {
        destructive:
          "shadow-glow-destructive hover:shadow-glow-destructive/80 bg-destructive text-destructive-foreground hover:bg-destructive/90",
        ghost: "hover:shadow-glow-subtle text-muted-foreground hover:bg-foreground/5 hover:text-foreground",
        glass:
          "glass hover:shadow-glow border-white/10 text-foreground shadow-sm hover:-translate-y-0.5 hover:border-white/20 hover:bg-white/10",
        outline:
          "hover:shadow-glow-primary border border-border bg-transparent text-foreground hover:border-primary/50 hover:bg-primary/5 hover:text-primary",
        primary:
          "shadow-glow-primary relative border border-primary/50 bg-linear-to-b from-primary to-primary/80 text-primary-foreground hover:-translate-y-0.5 hover:shadow-[0_0_30px_hsl(210_100%_45%_/_0.6)] hover:brightness-110",
        secondary:
          "shadow-glow-secondary hover:shadow-glow-secondary/80 bg-secondary text-secondary-foreground hover:bg-secondary/80",
      },
    },
  },
);

export interface Props
  extends HTMLAttributes<"button">, Omit<HTMLAttributes<"a">, "type">, VariantProps<typeof buttonVariants> {
  as?: any;
  icon?: string;
  iconPosition?: "left" | "right";
  iconSize?: any;
}

const { as, class: className, href, icon, iconPosition = "left", iconSize, size, variant, ...props } = Astro.props;

const Tag = as || (href ? "a" : "button");
const isButton = Tag === "button";
---

<Tag
  class:list={[cn(buttonVariants({ size, variant }), className)]}
  href={href}
  type={isButton ? "button" : undefined}
  {...props}
>
  {icon && iconPosition === "left" && <Icon name={icon} size={iconSize || (size === "xs" ? "sm" : "md")} />}
  <slot />
  {icon && iconPosition === "right" && <Icon name={icon} size={iconSize || (size === "xs" ? "sm" : "md")} />}
</Tag>
