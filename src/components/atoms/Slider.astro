---
import type { HTMLAttributes } from "astro/types";

import { cn } from "../../lib/cn";

export interface Props extends Omit<HTMLAttributes<"input">, "type"> {}

const { class: className, ...props } = Astro.props;
---

<input
  class:list={cn(
    "h-1.5 w-full cursor-pointer appearance-none rounded-lg bg-border accent-primary hover:accent-primary/80 focus:outline-none",
    className,
  )}
  type="range"
  {...props}
/>

<style>
  input[type="range"]::-webkit-slider-thumb {
    @apply size-4 appearance-none rounded-full border border-primary/50 bg-foreground shadow-glow-primary transition-all duration-300;
  }

  input[type="range"]::-moz-range-thumb {
    @apply size-4 appearance-none rounded-full border border-primary/50 bg-foreground shadow-glow-primary transition-all duration-300;
  }
</style>
