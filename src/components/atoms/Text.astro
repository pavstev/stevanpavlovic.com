---
import type { HTMLAttributes } from "astro/types";
import { cva, type VariantProps } from "class-variance-authority";
import { cn } from "../../lib/cn";

const textVariants = cva("leading-relaxed", {
  defaultVariants: {
    size: "base",
    variant: "default",
  },
  variants: {
    size: {
      base: "text-[0.9375rem]",
      lg: "text-[1.125rem] font-medium",
      sm: "text-[0.8125rem]",
      xs: "text-[0.6875rem]",
    },
    variant: {
      accent: "font-medium text-accent",
      default: "text-foreground",
      muted: "text-muted-foreground",
      primary: "font-medium text-primary",
    },
  },
});

export interface Props extends HTMLAttributes<"p">, VariantProps<typeof textVariants> {
  as?: any;
}

const { as: Tag = "p", class: className, size, variant, ...props } = Astro.props;
---

<Tag class:list={[cn(textVariants({ size, variant }), className)]} {...props}>
  <slot />
</Tag>
