---
import type { HTMLAttributes } from "astro/types";

import { cva, type VariantProps } from "class-variance-authority";

import { cn } from "../../lib/cn";

const variants = cva(
  "inline-flex items-center rounded-full border px-2 py-0.5 font-mono text-[10px] font-bold tracking-widest uppercase transition-all duration-300 select-none",
  {
    defaultVariants: {
      variant: "default",
    },
    variants: {
      variant: {
        accent: "shadow-glow-accent border-accent/40 bg-accent/10 text-accent",
        cyber: "neon-border bg-card/80 px-2.5 py-0.5 text-foreground",
        default: "border-border/50 bg-foreground/5 text-muted-foreground hover:border-primary/30",
        primary: "shadow-glow-primary border-primary/40 bg-primary/10 text-primary",
      },
    },
  },
);

interface Props extends HTMLAttributes<"span">, VariantProps<typeof variants> {
  as?: any;
}

const { as: Tag = "span", class: className, variant, ...props } = Astro.props;
---

<Tag class:list={[cn(variants({ variant }), className)]} {...props}>
  <slot />
</Tag>
