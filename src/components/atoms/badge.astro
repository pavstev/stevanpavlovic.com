---
import type { HTMLAttributes } from "astro/types";

import { cva, type VariantProps } from "class-variance-authority";

const variants = cva(
  "inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-bold tracking-tight uppercase transition-all duration-300 select-none",
  {
    defaultVariants: {
      variant: "default",
    },
    variants: {
      variant: {
        accent: "hover:shadow-glow-accent border-accent/20 bg-accent/10 text-accent hover:bg-accent/20",
        default: "hover:shadow-glow-primary border-primary/20 bg-primary/10 text-primary hover:bg-primary/20",
        glass: "glass border-foreground/10 text-foreground/70 hover:border-foreground/20 hover:text-foreground",
        outline: "border-border/50 bg-transparent text-muted-foreground hover:border-border hover:text-foreground",
      },
    },
  },
);

interface Props extends HTMLAttributes<"span">, VariantProps<typeof variants> {
  as?: any;
}

const { as: Tag = "span", class: className, variant, ...props } = Astro.props;
---

<Tag
  class:list={[variants({ variant }), className]}
  style="foreground-space: nowrap; overflow: hidden; text-overflow: ellipsis;"
  {...props}
>
  <slot />
</Tag>
