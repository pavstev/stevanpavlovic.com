---
import type { HTMLAttributes } from "astro/types";

import { cva, type VariantProps } from "class-variance-authority";

import { cn } from "../../lib/cn";

const variants = cva(
  "inline-flex items-center rounded-full border px-2 py-0.25 font-mono text-[10px] font-bold tracking-widest uppercase transition-all duration-300 select-none",
  {
    defaultVariants: {
      variant: "default",
    },
    variants: {
      variant: {
        accent: "border-accent/40 bg-accent/10 text-accent shadow-[0_0_15px_rgba(0,255,100,0.15)]",
        cyber: "neon-border bg-card/80 px-2 py-0.25",
        default: "border-border/50 bg-foreground/5 text-muted-foreground hover:border-primary/30",
        destructive: "border-destructive/40 bg-destructive/10 text-destructive shadow-[0_0_15px_rgba(255,30,150,0.15)]",
        glow: "border-primary bg-primary text-primary-foreground shadow-[0_0_20px_var(--color-primary)]",
        highlight: "border-highlight/40 bg-highlight/10 text-highlight shadow-[0_0_15px_rgba(200,255,0,0.15)]",
        "led-accent": "flex items-center gap-2 border-none bg-transparent p-0 text-accent",
        "led-destructive": "flex items-center gap-2 border-none bg-transparent p-0 text-destructive",
        "led-primary": "flex items-center gap-2 border-none bg-transparent p-0 text-primary",
        "led-secondary": "flex items-center gap-2 border-none bg-transparent p-0 text-secondary",
        primary: "border-primary/40 bg-primary/10 text-primary shadow-[0_0_15px_rgba(30,150,255,0.15)]",
        secondary: "border-secondary/40 bg-secondary/10 text-secondary shadow-[0_0_15px_rgba(255,150,30,0.15)]",
      },
    },
  },
);

interface Props extends HTMLAttributes<"span">, VariantProps<typeof variants> {
  as?: any;
}

const { as: Tag = "span", class: className, variant, ...props } = Astro.props;
---

<Tag class:list={[cn(variants({ variant }), className)]} {...props}>
  {
    variant?.startsWith("led-") && (
      <span
        class:list={[
          "size-1.5 animate-pulse-neon rounded-full",
          variant === "led-primary" && "bg-primary shadow-[0_0_10px_var(--color-primary)]",
          variant === "led-accent" && "bg-accent shadow-[0_0_10px_var(--color-accent)]",
          variant === "led-secondary" && "bg-secondary shadow-[0_0_10px_var(--color-secondary)]",
          variant === "led-destructive" && "bg-destructive shadow-[0_0_10px_var(--color-destructive)]",
        ]}
      />
    )
  }
  <slot />
</Tag>
