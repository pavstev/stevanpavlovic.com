---
import type { HTMLAttributes } from "astro/types";

import { cva, type VariantProps } from "class-variance-authority";

import AppIcon from "./app-icon.astro";

const variants = cva(
  "inline-flex cursor-pointer items-center justify-center gap-2 font-semibold tracking-tight transition-all duration-300 select-none active:scale-[0.98] disabled:pointer-events-none disabled:opacity-50",
  {
    defaultVariants: {
      size: "md",
      variant: "primary",
    },
    variants: {
      size: {
        icon: "size-10 rounded-full",
        lg: "h-12 rounded-2xl px-6 text-base",
        md: "h-10 rounded-xl px-4 text-sm",
        sm: "h-8 rounded-lg px-3 text-xs",
      },
      variant: {
        accent: "hover:shadow-glow-accent bg-accent text-accent-foreground hover:bg-accent/90",
        ghost: "text-muted-foreground hover:bg-foreground/5 hover:text-foreground",
        glass: "glass text-foreground hover:border-foreground/20 hover:bg-background/60",
        outline: "border border-border bg-transparent text-foreground hover:bg-foreground/5",
        primary: "hover:shadow-glow-primary bg-primary text-primary-foreground hover:bg-primary/90",
      },
    },
  },
);

interface Props extends HTMLAttributes<"button">, Omit<HTMLAttributes<"a">, "type">, VariantProps<typeof variants> {
  as?: any;
  external?: boolean;
  icon?: string;
  withArrow?: boolean;
}

const { as, class: className, external, href, icon, size, variant, withArrow, ...props } = Astro.props;

const Element = as || (href ? "a" : "button");
const hrefString = typeof href === "string" ? href : href?.toString();
const isExternal = external ?? (hrefString?.startsWith("http") || hrefString?.startsWith("mailto"));
const target = isExternal ? "_blank" : undefined;
const rel = isExternal ? "noopener noreferrer" : undefined;

const Tag = Element as any;
const elementProps = {
  href,
  rel,
  target,
  ...props,
};

if (Element === "button" && !elementProps.type) {
  elementProps["type"] = "button";
}
---

<Tag class:list={[variants({ size, variant }), { group: icon || withArrow }, className]} {...elementProps}>
  {
    icon && (
      <AppIcon
        class="transition-transform duration-300 group-hover:scale-110"
        name={icon}
        size={size === "sm" ? "sm" : "md"}
      />
    )
  }
  <slot />
  {
    withArrow && (
      <AppIcon
        class="text-muted-foreground transition-transform duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5"
        name="mdi:arrow-top-right"
        size="sm"
      />
    )
  }
  {isExternal && !withArrow && size !== "icon" && <span class="sr-only">(opens in new tab)</span>}
</Tag>
