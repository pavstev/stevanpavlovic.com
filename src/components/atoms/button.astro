---
import type { HTMLAttributes } from 'astro/types';

import { cva, type VariantProps } from 'class-variance-authority';

import { cn } from '../../lib/cn';

/**
 * Button Component - Modern, minimalistic design
 * Following Vercel/Geist design principles
 */
const buttonVariants = cva(
  // Base styles
  'inline-flex items-center justify-center gap-2 rounded-lg text-sm font-medium whitespace-nowrap',
  // Transitions and focus states
  'transition-all duration-200 ease-out',
  'focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 focus-visible:ring-offset-background focus-visible:outline-none',
  'disabled:pointer-events-none disabled:opacity-50',
  // Icon sizing
  '[&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0',
  {
    defaultVariants: {
      effect: 'none',
      size: 'md',
      variant: 'primary',
    },
    variants: {
      effect: {
        none: '',
        pulse: 'animate-pulse',
        shine: 'relative overflow-hidden before:absolute before:inset-0 before:-translate-x-full before:animate-[shimmer_2s_infinite] before:bg-linear-to-r before:from-transparent before:via-white/10 before:to-transparent',
      },
      size: {
        icon: 'size-9',
        lg: 'h-11 rounded-lg px-8 text-base',
        md: 'h-9 px-4 py-2',
        sm: 'h-8 rounded-md px-3 text-xs',
      },
      variant: {
        // Destructive - For delete/danger actions
        destructive:
          'border border-destructive/20 bg-destructive/15 text-destructive hover:bg-destructive/25',
        // Ghost - Minimal, no background
        ghost:
          'hover:bg-muted hover:text-muted-foreground',
        // Glass - Frosted glass effect
        glass:
          'glass hover:bg-glass-strong border border-border/50',
        // Link - Text link style
        link:
          'p-0 text-muted-foreground underline-offset-4 hover:text-foreground hover:underline',
        // Outline - Border only
        outline:
          'border border-border bg-transparent hover:bg-muted/50',
        // Primary - Solid accent color
        primary:
          'bg-primary text-primary-foreground shadow-sm',
        // Secondary - Muted background
        secondary:
          'border border-secondary/20 bg-secondary/20 text-secondary-foreground',
      }
    },
  }
);

interface Props extends Omit<HTMLAttributes<'button'>, 'type'>, Omit<HTMLAttributes<'a'>, 'type'>, VariantProps<typeof buttonVariants> {
  as?: 'a' | 'button';
  class?: string;
  href?: string;
  type?: HTMLAttributes<'a'>['type'] | HTMLAttributes<'button'>['type'];
}

const {
  as,
  class: className,
  effect,
  href,
  size,
  variant,
  ...props
} = Astro.props;

const Element = as || (href ? 'a' : 'button');
---

<Element
  class:list={cn(buttonVariants({ className, effect, size, variant }))}
  href={href}
  {...(Element === 'button' ? { type: 'button' } : {})}
  {...(props as any)}
>
  <slot />
</Element>
