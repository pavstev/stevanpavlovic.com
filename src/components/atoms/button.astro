---
import type { HTMLAttributes } from 'astro/types';

import { cva, type VariantProps } from 'class-variance-authority';

const buttonVariants = cva(
  'inline-flex items-center justify-center gap-2 rounded-md text-sm font-medium whitespace-nowrap transition-all duration-300 focus-visible:ring-1 focus-visible:ring-ring focus-visible:outline-none disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0',
  {
    defaultVariants: {
      effect: 'none',
      size: 'default',
      variant: 'default',
    },
    variants: {
      effect: {
        none: '',
        pulse: 'animate-pulse',
        ring: 'ring-1 ring-ring ring-offset-2 ring-offset-background',
        shine: 'relative overflow-hidden before:absolute before:inset-0 before:-translate-x-full before:animate-[shimmer_2s_infinite] before:bg-linear-to-r before:from-transparent before:via-white/10 before:to-transparent',
      },
      size: {
        default: 'h-9 px-4 py-2',
        icon: 'size-9',
        lg: 'h-10 rounded-md px-8',
        sm: 'h-8 rounded-md px-3 text-xs',
      },
      variant: {
        default:
          'bg-primary text-primary-foreground shadow hover:bg-primary/90 active:scale-[0.98]',
        destructive:
          'bg-destructive/10 text-destructive hover:bg-destructive/20 active:scale-[0.98]',
        ghost: 'hover:bg-accent hover:text-accent-foreground active:scale-[0.98]',
        glass: 'border border-border bg-foreground/10 text-foreground backdrop-blur-md hover:border-border hover:bg-foreground/10 active:scale-[0.98]',
        link: 'text-muted-foreground underline-offset-4 hover:text-foreground hover:underline',
        outline:
          'border border-border bg-transparent shadow-sm hover:bg-accent hover:text-accent-foreground active:scale-[0.98]',
        primary:
          'border border-primary/20 bg-primary/10 text-primary shadow-sm hover:bg-primary/20 hover:text-primary active:scale-[0.98]',
        secondary:
          'bg-secondary text-secondary-foreground shadow-sm hover:bg-secondary/80 active:scale-[0.98]',
      }
    },
  }
);

interface Props extends Omit<HTMLAttributes<'button'>, 'type'>, Omit<HTMLAttributes<'a'>, 'type'>, VariantProps<typeof buttonVariants> {
  as?: string;
  class?: string;
  href?: string;
  type?: HTMLAttributes<'a'>['type'] | HTMLAttributes<'button'>['type'];
}

const { as, class: className, href, size, variant, ...props } = Astro.props;

const Element = as || (href ? 'a' : 'button');
const variants = buttonVariants({ className: className ?? '', size, variant });
---

<Element class:list={variants} href={href} {...(props as any)}>
  <slot />
</Element>
