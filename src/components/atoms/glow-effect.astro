---
interface Props {
  class?: string;
  variant?: 'hero' | 'page-left' | 'page-right';
}

const { class: className, variant = 'hero' } = Astro.props;

const variants = {
  hero: "absolute inset-0 -z-10 rounded-full bg-primary/20 blur-xl",
  'page-left': "pointer-events-none absolute -top-20 -left-20 -z-10 size-64 rounded-full bg-primary/10 blur-xl md:size-96",
  'page-right': "pointer-events-none absolute -top-10 -right-10 -z-10 size-48 rounded-full bg-secondary/10 blur-xl md:size-64"
};
---

<div class:list={[variants[variant], className]}></div>
