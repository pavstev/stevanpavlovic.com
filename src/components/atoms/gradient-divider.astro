---
interface Props {
  class?: string;
  variant?: 'footer' | 'section';
}

const { class: className, variant = 'footer' } = Astro.props;

const gradients = {
  footer: "bg-linear-to-r from-transparent via-primary/10 to-transparent",
  section: "bg-linear-to-r from-primary/50 via-border to-transparent opacity-50"
};

const baseClasses = variant === 'footer'
  ? "absolute inset-x-0 top-0 h-px"
  : "mt-6 h-px w-full";
---

<div class:list={[baseClasses, gradients[variant], className]}></div>
