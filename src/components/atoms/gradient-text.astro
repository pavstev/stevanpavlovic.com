---
import type { HTMLAttributes } from 'astro/types';

import { cva, type VariantProps } from 'class-variance-authority';

import { cn } from '../../lib/cn';

const gradientTextVariants = cva('bg-clip-text text-transparent', {
  variants: {
    variant: {
      accent: 'from-accent to-accent/70',
      default: 'from-foreground to-muted-foreground',
      primary: 'from-primary to-primary/70',
      secondary: 'from-secondary to-secondary/70',
    },
  },
});

interface Props extends HTMLAttributes<'span'>, VariantProps<typeof gradientTextVariants> {
  class?: string;
}

const { class: className, variant = 'default', ...props } = Astro.props;
---

<span class:list={cn(gradientTextVariants({ className, variant }))} {...props}>
  <slot />
</span>
