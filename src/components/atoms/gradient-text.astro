---
import type { HTMLAttributes } from 'astro/types';

import { cva, type VariantProps } from 'class-variance-authority';

import { cn } from '../../lib/cn';

const gradientTextVariants = cva(
  'bg-linear-to-r bg-clip-text text-transparent',
  {
    defaultVariants: {
      variant: 'default',
    },
    variants: {
      variant: {
        accent: 'from-accent to-accent',
        default: 'from-foreground to-muted-foreground dark:from-foreground dark:to-muted-foreground',
        primary: 'from-primary to-primary',
        secondary: 'from-muted-foreground to-muted-foreground',
      },
    },
  }
);

interface Props extends HTMLAttributes<'span'>, VariantProps<typeof gradientTextVariants> {}

const { class: className, variant, ...props } = Astro.props;
---

<span class:list={cn(gradientTextVariants({ className, variant }))} {...props}>
  <slot />
</span>
