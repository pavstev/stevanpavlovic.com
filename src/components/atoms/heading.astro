---
import type { HTMLAttributes } from "astro/types";

import { cva, type VariantProps } from "class-variance-authority";

const variants = cva("font-display font-bold tracking-tight text-foreground", {
  defaultVariants: {
    size: "lg",
    variant: "default",
  },
  variants: {
    size: {
      lg: "text-4xl font-extrabold sm:text-5xl md:text-6xl lg:text-7xl",
      md: "text-3xl sm:text-4xl md:text-5xl lg:text-6xl",
      sm: "text-xl sm:text-2xl md:text-3xl lg:text-4xl",
      xl: "text-5xl sm:text-6xl md:text-7xl lg:text-8xl",
    },
    variant: {
      accent: "text-accent",
      default: "text-foreground",
      gradient: "text-gradient",
      muted: "text-muted-foreground",
    },
  },
});

interface Props extends HTMLAttributes<"h1">, VariantProps<typeof variants> {
  as?: 1 | 2 | 3 | 4 | 5 | 6 | "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
  level?: 1 | 2 | 3 | 4 | 5 | 6;
  size?: "lg" | "md" | "sm" | "xl";
}

const { as, class: className, level = 1, size, variant, ...props } = Astro.props;

const derivedLevel = as && typeof as === "number" ? as : level;
const Tag = `h${derivedLevel}` as any;
---

<Tag class:list={variants({ className, size, variant })} {...props}>
  <slot />
</Tag>
