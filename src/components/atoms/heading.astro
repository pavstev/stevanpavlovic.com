---
import type { HTMLAttributes } from "astro/types";

import { cva, type VariantProps } from "class-variance-authority";

const variants = cva("font-display font-bold tracking-tight text-foreground selection:bg-primary/30", {
  defaultVariants: {
    size: "md",
    variant: "default",
  },
  variants: {
    size: {
      display: "text-6xl font-black sm:text-7xl md:text-8xl lg:text-9xl",
      lg: "text-4xl font-extrabold sm:text-5xl md:text-6xl",
      md: "text-2xl font-bold sm:text-3xl md:text-4xl",
      sm: "text-xl font-bold sm:text-2xl",
      xl: "text-5xl font-extrabold sm:text-6xl md:text-7xl",
      xs: "text-lg font-semibold",
    },
    variant: {
      accent: "text-gradient-accent",
      default: "text-foreground",
      gradient: "text-gradient",
      muted: "font-medium text-muted-foreground",
      primary: "text-gradient-primary",
    },
  },
});

interface Props extends HTMLAttributes<"h1">, VariantProps<typeof variants> {
  as?: 1 | 2 | 3 | 4 | 5 | 6 | "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
  level?: 1 | 2 | 3 | 4 | 5 | 6;
}

const { as, class: className, level = 1, size, variant, ...props } = Astro.props;

const tagLevel = as ? (typeof as === "string" ? as.replace("h", "") : as) : level;
const Tag = `h${tagLevel}` as any;
---

<Tag class:list={[variants({ size, variant }), className]} {...props}>
  <slot />
</Tag>
