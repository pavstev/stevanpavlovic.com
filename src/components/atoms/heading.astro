---
import type { HTMLAttributes } from 'astro/types';

import { cva, type VariantProps } from 'class-variance-authority';

const heading = cva('font-bold tracking-tight text-foreground', {
  defaultVariants: {
    size: 'default',
    variant: 'default',
  },
  variants: {
    size: {
      '2xl': 'text-2xl sm:text-3xl md:text-4xl',
      '4xl': 'text-4xl sm:text-5xl md:text-6xl lg:text-7xl', // Hero
      default: 'text-3xl sm:text-4xl',
      item: 'text-xl sm:text-2xl',
      lg: 'text-lg sm:text-xl',
      section: 'text-2xl sm:text-3xl',
      xs: 'text-lg',
    },
    variant: {
      default: 'text-foreground',
      gradient: 'bg-linear-to-r from-foreground to-muted-foreground bg-clip-text text-transparent',
      muted: 'text-muted-foreground',
    }
  }
});

interface Props
  extends HTMLAttributes<'h1'>, VariantProps<typeof heading> {
  level?: 1 | 2 | 3 | 4 | 5 | 6;
}

const { class: className, level = 1, size = '2xl', ...props } = Astro.props;

const Tag = `h${String(level)}` as 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';
---

<Tag class:list={heading({ class: className, size })} {...props}>
  <slot />
</Tag>
