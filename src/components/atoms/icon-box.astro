---
import type { HTMLAttributes } from 'astro/types';
import { cva, type VariantProps } from 'class-variance-authority';
import { cn } from '../../lib/cn';

const iconBoxVariants = cva(
  'flex items-center justify-center rounded-lg transition-colors duration-200',
  {
    variants: {
      size: {
        sm: 'size-8 rounded-md',
        md: 'size-10 rounded-lg',
        lg: 'size-12 rounded-lg',
        xl: 'size-16 rounded-xl',
      },
      variant: {
        default: 'border border-border bg-muted/30 text-muted-foreground',
        filled: 'bg-primary text-primary-foreground border border-primary',
        accent: 'bg-accent/10 border border-accent/20 text-accent-foreground',
        dimmed: 'bg-secondary/10 text-secondary-foreground border border-secondary/20',
        outline: 'border border-border bg-transparent text-foreground',
        ghost: 'bg-transparent border-transparent text-muted-foreground hover:text-foreground',
      },
    },
    defaultVariants: {
      size: 'md',
      variant: 'default',
    },
  }
);

interface Props extends HTMLAttributes<'div'>, Omit<VariantProps<typeof iconBoxVariants>, 'size'> {
  as?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl' | number;
}

const { as: Tag = 'div', class: className, variant, size = 'md', ...props } = Astro.props;

const isNumericSize = typeof size === 'number';
const numericStyle = isNumericSize
  ? { width: `${size}px`, height: `${size}px` }
  : {};
---

<Tag
  class={cn(iconBoxVariants({ variant, size: isNumericSize ? null : (size as any), className }))}
  style={numericStyle}
  {...props}
>
  <slot />
</Tag>
