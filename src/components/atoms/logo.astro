---
import { cn } from "../../lib/cn";
import { PROFILE } from "../../lib/config";
import Button from "./button.astro";
import Text from "./text.astro";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;

const initials = PROFILE.name
  .split(" ")
  .map((n) => n[0])
  .join("");
---

<Button
  class:list={cn("group inline-flex items-center no-underline", className)}
  href="/"
  variant="unstyled"
>
  <div class="group-hover:shadow-glow-primary flex h-9 items-center gap-2 rounded-full bg-muted/30 px-3 text-sm font-bold tracking-tighter ring-1 ring-border/50 transition-all duration-500 group-hover:scale-105">
    <span class="text-primary">{initials}</span>
    <Text
      as="span"
      class="hidden text-muted-foreground transition-all duration-500 sm:inline"
    >
      {PROFILE.name}
    </Text>
  </div>
</Button>
