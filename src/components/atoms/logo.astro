---
import { cn } from "../../lib/cn";
import { PROFILE } from "../../lib/config";
import Link from "./link.astro";
import Text from "./text.astro";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;

const initials = PROFILE.name
  .split(" ")
  .map((n) => n[0])
  .join("");
---

<Link
  class:list={cn("group flex items-center gap-3 pl-2 no-underline", className)}
  href="/"
  variant="unstyled"
>
  <div class="group-hover:shadow-glow-primary flex size-9 items-center justify-center rounded-full bg-primary/10 text-sm font-bold tracking-tighter text-primary ring-1 ring-primary/20 transition-all duration-500 group-hover:scale-110 group-hover:bg-primary/20 group-hover:ring-primary/40">
    {initials}
  </div>
  <Text
    as="span"
    class="group-hover:text-gradient-primary text-sm font-bold tracking-tight text-foreground transition-all duration-500 group-hover:translate-x-1 sm:block"
  >
    {PROFILE.name}
  </Text>
</Link>
