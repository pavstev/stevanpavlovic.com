---
import type { HTMLAttributes } from 'astro/types';
import { cva, type VariantProps } from 'class-variance-authority';
import { cn } from '../../lib/cn';

const textVariants = cva(
  'leading-relaxed break-words',
  {
    variants: {
      variant: {
        default: 'text-foreground',
        muted: 'text-muted-foreground',
        primary: 'text-primary font-medium',
        secondary: 'text-secondary-foreground',
        destructive: 'text-destructive',
        gradient: 'text-gradient font-bold',
      },
      size: {
        xs: 'text-xs',
        sm: 'text-sm',
        base: 'text-base',
        lg: 'text-lg font-medium',
        xl: 'text-xl font-semibold',
        '2xl': 'text-2xl font-bold tracking-tight',
        '3xl': 'text-3xl font-bold tracking-tight',
        '4xl': 'text-4xl font-extrabold tracking-tight',
      },
    },
    defaultVariants: {
      variant: 'default',
      size: 'base',
    },
  }
);

export interface Props extends HTMLAttributes<'p'>, VariantProps<typeof textVariants> {
  as?: string;
}

const { as = 'p', class: className, variant, size, ...props } = Astro.props;
const Tag = as as any;
---

<Tag class={cn(textVariants({ variant, size, className }))} {...props}>
  <slot />
</Tag>
