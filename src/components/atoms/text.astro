---
import type { HTMLAttributes } from 'astro/types';

import { cva, type VariantProps } from 'class-variance-authority';

const text = cva('leading-relaxed transition-colors duration-300', {
  variants: {
    size: {
      '2xl': 'text-2xl', // Added for larger copy
      base: 'text-base',
      lg: 'text-lg',
      sm: 'text-sm',
      xl: 'text-xl',
      xs: 'text-xs',
    },
    variant: {
      gradient: 'bg-linear-to-r from-foreground/80 to-muted-foreground bg-clip-text text-transparent',
      highlight: 'font-medium text-foreground', // Important text
      muted: 'text-muted-foreground',
      primary: 'text-foreground/90', // Standard body text
      secondary: 'text-muted-foreground', // Subtitles/descriptions
    },
  },
});

interface Props extends HTMLAttributes<any>, VariantProps<typeof text> {
  as?: any;
}

const {
  as: Tag = 'p',
  class: className,
  size = 'base',
  variant = 'secondary',
  ...props
} = Astro.props;
---

<Tag class:list={text({ class: className, size, variant })} {...props}>
  <slot />
</Tag>
