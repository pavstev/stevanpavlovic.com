---
import type { HTMLAttributes } from "astro/types";

import { cva, type VariantProps } from "class-variance-authority";

import { cn } from "../../lib/cn";

const variants = cva("leading-relaxed wrap-break-word", {
  defaultVariants: {
    size: "base",
    variant: "default",
  },
  variants: {
    size: {
      "2xl": "text-2xl font-bold tracking-tight",
      "3xl": "text-3xl font-bold tracking-tight",
      "4xl": "text-4xl font-extrabold tracking-tight",
      base: "text-base leading-relaxed",
      lg: "text-lg leading-relaxed font-medium",
      p: "text-base leading-relaxed",
      sm: "text-sm leading-relaxed",
      xl: "text-xl leading-relaxed font-semibold",
      xs: "text-xs leading-relaxed",
    },
    variant: {
      accent: "font-medium text-accent",
      default: "text-foreground",
      destructive: "text-destructive",
      gradient: "text-gradient font-bold",
      "gradient-accent": "text-gradient-accent font-bold",
      muted: "text-muted-foreground",
      primary: "font-medium text-primary",
      secondary: "text-secondary-foreground",
    },
  },
});

interface Props extends HTMLAttributes<"p">, VariantProps<typeof variants> {
  as?: string;
}

const { as = "p", class: className, size, variant, ...props } = Astro.props;
const Tag = as as any;
---

<Tag class:list={cn(variants({ className, size, variant }))} {...props}>
  <slot />
</Tag>
