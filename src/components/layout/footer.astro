---
import { Icon } from 'astro-icon/components';

import { PROFILE, SOCIALS } from '../../lib/config';
import Text from '../atoms/text.astro';
import Container from '../molecules/container.astro';

function getCopyrightText(): string {
  return `Â© ${new Date().getFullYear()} ${PROFILE.name}. All rights reserved.`;
}
---

<footer class="relative mt-8 mb-4 w-full px-4 md:px-0" transition:persist>

  <Container>
    <div class="glass flex h-14 w-full items-center justify-between gap-4 rounded-full px-6 shadow-2xl transition-all duration-500 hover:border-white/20">
      {/* Copyright */}
      <Text size="sm" variant="muted">
        {getCopyrightText()}
      </Text>

      {/* Links */}
      <div class="flex items-center gap-4">
        <div class="flex items-center gap-1 border-r border-white/5 pr-4">
          {SOCIALS.map((social) => (
            <a
              class="hover:shadow-glow-subtle flex items-center rounded-full p-2 text-muted-foreground transition-all duration-300 hover:bg-white/5 hover:text-foreground"
              data-tooltip={social.name}
              href={social.href}
              rel="noreferrer"
              target="_blank"
            >
              <Icon class="size-4" name={social.icon} />
            </a>
          ))}
        </div>

        <a class="flex items-center gap-2 text-sm text-muted-foreground transition-colors hover:text-foreground" data-tooltip="RSS Feed" href="/rss.xml">
          <Icon class="size-4" name="mdi:rss" />
        </a>
        <a class="flex items-center gap-2 text-sm text-muted-foreground transition-colors hover:text-foreground" data-tooltip="Sitemap" href="/sitemap-index.xml">
          <Icon class="size-4" name="mdi:sitemap" />
        </a>
      </div>
    </div>
  </Container>
</footer>
