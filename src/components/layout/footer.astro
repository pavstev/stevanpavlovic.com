---
import { cn } from "@client/utils.ts";
import LogoIcon from "@components/ui/logo.astro";

import { fullName } from "../../constants.ts";
import CopyrightText from "../custom/common/copyright-text.astro";
import { FooterSocials } from "./footer-socials.tsx";

const gradientClass = "bg-linear-to-t from-primary/5 to-muted/20";
---

<footer
  class="border-border dark:from-background/80 dark:to-muted/20 w-full border-t backdrop-blur-xl transition-all duration-300 ease-in-out"
>
  <div
    class={cn(
      "container mx-auto flex flex-col items-center justify-between gap-6 px-4 py-8 md:flex-row md:px-8",
      gradientClass
    )}
  >
    <div class="flex flex-col items-center gap-2 text-center md:items-start md:text-left">
      <div class="flex items-center gap-2">
        <LogoIcon class="text-foreground size-8" />
        <span class="text-lg font-semibold">{fullName}</span>
      </div>
      <CopyrightText class="mt-2 md:hidden" />
    </div>

    <div class="flex flex-col items-center gap-4 md:flex-row md:gap-6">
      <FooterSocials client:visible />
      <CopyrightText class="hidden md:block" />
    </div>
  </div>
</footer>