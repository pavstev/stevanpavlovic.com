---
import { PROFILE } from '../../lib/config';
import Text from '../atoms/text.astro';
import Container from '../molecules/container.astro';
---

<footer class="mt-auto w-full py-8" transition:persist>
  <Container class="max-w-5xl">
    <div class="glass flex w-full flex-col items-center justify-between gap-4 rounded-3xl p-6 sm:flex-row sm:px-8">

      <div class="flex flex-col items-center gap-2 sm:items-start">
        <Text class="font-bold tracking-tight" size="sm">
          &copy; {new Date().getFullYear()} {PROFILE.name}
        </Text>
        <Text variant="muted" size="xs" class="font-mono uppercase tracking-widest">
          Crafted with precision
        </Text>
      </div>

      <nav class="flex items-center gap-6">
        <a href="/rss.xml" class="text-xs font-mono uppercase tracking-widest text-muted-foreground hover:text-primary transition-colors">
          RSS
        </a>
        <a href="/sitemap-index.xml" class="text-xs font-mono uppercase tracking-widest text-muted-foreground hover:text-primary transition-colors">
          Sitemap
        </a>
      </nav>

    </div>
  </Container>
</footer>
