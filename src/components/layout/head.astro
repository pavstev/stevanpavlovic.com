---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import type { ImageMetadata } from "astro";

import FallbackImage from "../../assets/placeholder.png";
import { PROFILE } from "../../config";
import SEO from "../atoms/MetaData.astro";
import GoogleTagManager from "../gtm.astro";

interface Props {
  description?: string;
  image?: ImageMetadata | string;
  title: string;
}

const { description, image = FallbackImage, title } = Astro.props;
const imageSrc = typeof image === "string" ? image : image.src;
---

<GoogleTagManager />

<SEO description={description ?? PROFILE.bio} image={new URL(imageSrc, Astro.url)} title={title} />
