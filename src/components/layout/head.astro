---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import type { ImageMetadata } from "astro";

import FallbackImage from "../../assets/placeholder.png";
import { PROFILE } from "../../lib/config";
import SEO from "../atoms/seo.astro";
import GoogleTagManager from "../google-tag-manager.astro";

interface Props {
  description?: string;
  image?: ImageMetadata;
  title: string;
}

const { description, image = FallbackImage, title } = Astro.props;
---

<GoogleTagManager />

<SEO description={description ?? PROFILE.bio} image={new URL(image.src, Astro.url)} title={title} />
