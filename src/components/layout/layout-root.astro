---
import "../../styles/global.css";
import "@fontsource-variable/space-grotesk";
import "@fontsource-variable/inter";
import "@fontsource-variable/jetbrains-mono";
import { ClientRouter } from "astro:transitions";

import MetaData from "../atoms/MetaData.astro";
import Analytics from "../atoms/Analytics.astro";

export interface Props {
  title: string;
  description: string;
  image?: URL;
  lang?: string;
}

const { title, description, image, lang = "en" } = Astro.props;
---

<!doctype html>
<html class="scroll-smooth" lang={lang}>
  <head>
    <MetaData description={description} image={image} title={title} />
    <Analytics />
    <ClientRouter />
    <slot name="head" />
  </head>
  <body class="bg-background text-foreground antialiased selection:bg-primary/20">
    <slot />
  </body>
</html>
