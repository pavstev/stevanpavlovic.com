---
import { cn } from "../../lib/cn";
import Stack from "../atoms/Stack.astro";
import Text from "../atoms/Text.astro";

interface Props {
  class?: string;
  label?: string;
}

const { class: className, label } = Astro.props;
---

<Stack class:list={[className]} gap={0}>
  {
    label && (
      <Text class="text-[10px] font-bold tracking-widest text-muted-foreground/60 uppercase" variant="muted">
        <slot name="label">{label}</slot>
      </Text>
    )
  }
  <div class="flex items-center gap-1.5 text-sm font-semibold text-foreground">
    <slot />
  </div>
</Stack>
