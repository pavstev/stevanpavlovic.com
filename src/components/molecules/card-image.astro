---
import type { ImageMetadata } from "astro";
import type { HTMLAttributes } from "astro/types";

import { Image } from "astro:assets";

interface Props extends HTMLAttributes<"div"> {
  alt?: string;
  class?: string;
  image: ImageMetadata | string;
  loading?: "eager" | "lazy";
  wrapperClass?: string;
}

const { alt = "", class: className, image, loading = "lazy", wrapperClass, ...rest } = Astro.props;
---

<div class:list={["relative overflow-hidden rounded-xl border border-border/50 bg-muted", wrapperClass]} {...rest}>
  {
    typeof image === "string" ? (
      <img
        alt={alt}
        class:list={["size-full object-cover transition-transform duration-300 group-hover:scale-[1.03]", className]}
        loading={loading}
        src={image}
      />
    ) : (
      <Image
        alt={alt}
        class:list={["size-full object-cover transition-transform duration-300 group-hover:scale-[1.03]", className]}
        height={400}
        loading={loading}
        src={image}
        width={600}
      />
    )
  }
</div>
