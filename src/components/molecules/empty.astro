---
import { Icon } from 'astro-icon/components';

import Button from '../atoms/button.astro';
import Heading from '../atoms/heading.astro';
import Text from '../atoms/text.astro';
import Stack from '../atoms/stack.astro';

interface Props {
  action?: {
    href: string;
    label: string;
  };
  description?: string;
  icon?: string;
  title?: string;
}

const {
  action,
  description = "We couldn't find what you're looking for.",
  icon = 'mdi:alert-circle-outline',
  title = 'Nothing found',
} = Astro.props;
---

<div
  aria-label={title}
  class="flex flex-col items-center justify-center py-16 text-center"
  role="region"
>
  <Stack align="center" gap={4}>
    <div class="flex items-center justify-center rounded-full bg-muted/30 p-4 ring-1 ring-border/50">
      <Icon class="text-muted-foreground" name={icon} size={32} />
    </div>

    <Heading level={3} size="lg">
      {title}
    </Heading>

    <Text class="max-w-md" variant="muted">
      {description}
    </Text>

    {
      action && (
        <Button as="a" href={action.href} variant="default">
          {action.label}
        </Button>
      )
    }
  </Stack>
</div>
