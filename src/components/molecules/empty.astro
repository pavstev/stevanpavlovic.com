---
import { Icon } from 'astro-icon/components';

import Button from '../atoms/button.astro';
import Heading from '../atoms/heading.astro';
import Text from '../atoms/text.astro';

interface Props {
  action?: {
    href: string;
    label: string;
    onClick?: string;
  };
  description?: string;
  icon?: string;
  title?: string;
}

const {
  action,
  description = "We couldn't find what you're looking for.",
  icon = 'mdi:alert-circle-outline',
  title = 'Nothing found',
} = Astro.props;
---

<div class="animate-in fade-in zoom-in flex flex-col items-center justify-center py-20 text-center duration-500">
  <div class="mb-6 rounded-full bg-secondary p-6 ring-1 ring-border">
    <Icon class="text-muted-foreground" name={icon} size={48} />
  </div>
  <Heading class="mb-2" level={3} size="item">
    {title}
  </Heading>
  <Text class="max-w-md" variant="secondary">
    {description}
  </Text>
  {
    action && (
      <Button as="a" class="mt-8" href={action.href} variant="default">
        {action.label}
      </Button>
    )
  }
</div>
