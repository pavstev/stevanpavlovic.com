---
import type { HTMLAttributes } from "astro/types";

import { buildResponsiveClasses, type ResponsiveValue } from "../../lib/styles";

interface Props extends HTMLAttributes<"div"> {
  as?: string;
  cols?: ResponsiveValue<1 | 2 | 3 | 4>;
  gap?: 2 | 4 | 6 | 8 | 10;
}

const { as: Tag = "div", class: className, cols = { base: 1 }, gap = 4, ...props } = Astro.props;

const colClass = buildResponsiveClasses(cols, "grid-cols");
const gapClass = `gap-${gap}`;
---

<Tag class:list={["grid w-full", colClass, gapClass, className]} {...props}>
  <slot />
</Tag>
