---
import { Icon } from 'astro-icon/components';

import Button from '../atoms/button.astro';

interface Props {
  currentPage: number;
  nextUrl: null | string;
  prevUrl: null | string;
  totalPages: number;
}

const { currentPage, nextUrl, prevUrl, totalPages } = Astro.props;
---

{
  totalPages > 1 && (
    <div class="flex items-center justify-between gap-3 border-t border-border/50 pt-2 md:justify-end md:gap-4 md:border-t-0 md:border-l md:border-border/50 md:pt-0 md:pl-6">
      <span class="order-2 text-xs font-medium text-muted-foreground md:order-1">
        Page <span class="text-foreground">{currentPage}</span> of <span class="text-foreground">{totalPages}</span>
      </span>

      <div class="order-1 flex items-center gap-1 md:order-2">
        <Button
          aria-label="Previous page"
          as={prevUrl ? 'a' : 'button'}
          class:list={['flex size-8 items-center justify-center p-0', { 'pointer-events-none opacity-40': !prevUrl }]}
          href={prevUrl || '#'}
          variant="ghost"
        >
          <Icon name="mdi:chevron-left" size={20} />
        </Button>

        <Button
          aria-label="Next page"
          as={nextUrl ? 'a' : 'button'}
          class:list={['flex size-8 items-center justify-center p-0', { 'pointer-events-none opacity-40': !nextUrl }]}
          href={nextUrl || '#'}
          variant="ghost"
        >
          <Icon name="mdi:chevron-right" size={20} />
        </Button>
      </div>
    </div>
  )
}
