---
import Avatar from "../atoms/avatar.astro";

interface Props {
  author?: {
    avatar: ImageMetadata;
    name: string;
    role: string;
  };
}

const { author } = Astro.props;
---

{
  author && (
    <div class="flex w-fit items-center gap-3 rounded-full border border-border/40 bg-muted/30 py-2 pr-6 pl-2 transition-colors hover:border-border/60 hover:bg-muted/50">
      <Avatar alt={author.name} size="sm" src={author.avatar} />
      <div class="text-left">
        <p class="text-xs font-bold tracking-wider text-foreground uppercase">{author.name}</p>
        <p class="text-[10px] tracking-widest text-muted-foreground uppercase">{author.role}</p>
      </div>
    </div>
  )
}
