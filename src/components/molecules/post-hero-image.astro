---
import type { ImageMetadata } from "astro";

import ZoomableImage from "./zoomable-image.tsx";

interface Props {
  image: ImageMetadata | undefined;
}

const { image } = Astro.props;
---

{
  image && (
    <div class="relative mx-auto mb-12 aspect-video w-full max-w-4xl overflow-hidden rounded-2xl border border-border/50 bg-muted shadow-2xl shadow-primary/5 transition-all sm:rounded-3xl">
      <ZoomableImage
        alt={image.src}
        className="size-full object-cover"
        client:load
        height={image.height}
        src={typeof image.src === "string" ? image.src : image.src}
        width={image.width}
      />
      <div class="pointer-events-none absolute inset-0 ring-1 ring-foreground/10 ring-inset sm:rounded-3xl" />
    </div>
  )
}
