---
import type { Tag } from "../../lib/collections";

import Badge from "../atoms/badge.astro";
import ToolbarItem from "../atoms/toolbar-item.astro";

interface Props {
  tags: Tag[];
  title: string | undefined;
}

const { tags, title } = Astro.props;
---

{
  tags && tags.length > 0 && (
    <div class="min-w-0">
      <ToolbarItem label={title || "Topic"}>
        <div class="flex flex-wrap gap-2 pt-1">
          {tags.map((tag) => (
            <Badge
              class="group-hover/toolbar:shadow-glow-accent cursor-pointer transition-all duration-300 group-hover/toolbar:border-accent/50 group-hover/toolbar:bg-accent/10 group-hover/toolbar:text-accent hover:text-foreground"
              variant="default"
            >
              {tag.label}
            </Badge>
          ))}
        </div>
      </ToolbarItem>
    </div>
  )
}
