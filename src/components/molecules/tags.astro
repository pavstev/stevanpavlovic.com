---
import type { Tag } from "../../lib/collections";

import Badge from "../atoms/badge.astro";
import Stack from "../atoms/stack.astro";

interface Props {
  class?: string;
  limit?: number;
  tags: Tag[];
}

const { class: className, limit, tags } = Astro.props;
---

{
  tags && tags.length > 0 && (
    <Stack class:list={[className, "group flex-wrap"]} direction="row" gap={2}>
      {tags.slice(0, limit || tags.length).map((tag) => (
        <Badge variant="default">{tag.label}</Badge>
      ))}
      {limit && tags.length > limit && <Badge variant="default">+{tags.length - limit}</Badge>}
    </Stack>
  )
}
