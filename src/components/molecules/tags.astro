---
import Badge from '../atoms/badge.astro';
import Stack from './stack.astro';

interface Props {
  class?: string;
  limit?: number;
  tags: string[];
}

const { class: className, limit, tags } = Astro.props;
---

{
  tags && tags.length > 0 && (
    <Stack class:list={className} direction="row" gap={2} wrap>
      {tags.slice(0, limit || tags.length).map((tag) => (
        <Badge variant="secondary">
          {tag}
        </Badge>
      ))}
      {limit && tags.length > limit && (
        <Badge variant="muted">
          +{tags.length - limit}
        </Badge>
      )}
    </Stack>
  )
}
