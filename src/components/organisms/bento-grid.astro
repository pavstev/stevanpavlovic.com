---
import { Icon } from 'astro-icon/components';

import { NAV_ITEMS } from '../../lib/config';
import Heading from '../atoms/heading.astro';
import IconBox from '../atoms/icon-box.astro';
import Link from '../atoms/link.astro';
import Text from '../atoms/text.astro';
import ProfileCard from './profile-card.astro';

const { items = NAV_ITEMS.filter((i) => i.label !== 'Home') } = Astro.props;

interface Props {
  items?: typeof NAV_ITEMS[number][];
}


---

<div class="gap-md grid grid-cols-1 md:grid-cols-3 md:grid-rows-[auto_auto] lg:grid-cols-3 lg:grid-rows-3">
  {/* Profile Card - Main Feature */}
  <ProfileCard class="md:col-span-3 md:row-span-1 lg:col-span-2 lg:row-span-3" />

  {
    items.map((item) => (
      <Link
        class="group relative flex flex-col justify-between overflow-hidden rounded-2xl border border-white/10 bg-card/60 p-6 backdrop-blur-md transition-all duration-300 hover:scale-[1.02] hover:border-primary/20 md:col-span-1 md:row-span-1 lg:col-span-1 lg:row-span-1"
        href={item.href}
        style={{
          '--item-color': item.color,
        }}
        variant="unstyled"
      >
        {/* Background Effects */}
        <div class="absolute inset-0 bg-linear-to-br from-(--item-color)/5 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100" />
        <div class="absolute -top-12 -right-12 size-48 rounded-full bg-(--item-color)/10 blur-[60px] transition-all duration-300 group-hover:bg-[color:var(--item-color)]/20" />
        <div class="absolute inset-0 z-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-[0.08] mix-blend-overlay brightness-100 contrast-150 transition-opacity duration-300 group-hover:opacity-[0.15]"></div>

        <div class="relative z-10 flex w-full items-start justify-between">
          <IconBox
            class="group-hover:shadow-glow bg-white/5 text-[color:var(--item-color)] ring-1 ring-white/10 transition-all duration-300 group-hover:bg-white/10 group-hover:ring-[color:var(--item-color)]/30"
            size="lg"
          >
            <Icon name={item.icon} size={24} />
          </IconBox>

          <div class="rounded-full border border-white/10 bg-black/20 p-2 opacity-0 transition-all duration-300 group-hover:border-primary/30 group-hover:opacity-100">
            <Icon class="text-white/70" name="mdi:arrow-top-right" size={14} />
          </div>
        </div>

        <div class="mt-md relative z-10">
          <Heading class="mt-2 mb-1 font-medium text-white transition-colors duration-300 group-hover:text-(--item-color)" level={3} size="lg">
            {item.label}
          </Heading>
          <Text class="line-clamp-2" size="sm" variant="muted">
            {item.description}
          </Text>
        </div>
      </Link>
    ))
  }
</div>
