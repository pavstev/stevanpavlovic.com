---
import { Icon } from 'astro-icon/components';

import { NAV_ITEMS, SITE_CONFIG } from '../../lib/config';
import GradientText from '../atoms/gradient-text.astro';
import Heading from '../atoms/heading.astro';
import IconBox from '../atoms/icon-box.astro';
import Link from '../atoms/link.astro';
import Text from '../atoms/text.astro';

const { items = NAV_ITEMS.filter((i) => i.label !== 'Home') } = Astro.props;

interface Props {
  items?: typeof NAV_ITEMS[number][];
}


---

<div class="grid grid-cols-1 gap-md sm:grid-cols-2 lg:grid-cols-6 lg:grid-rows-2">
  {/* Identity Tile - Main Feature */}
  <div class="group relative flex flex-col justify-center overflow-hidden rounded-2xl border border-white/10 bg-gradient-to-br from-card/80 to-card/40 p-6 text-center backdrop-blur-md transition-all duration-300 hover:scale-[1.02] hover:border-primary/30 sm:col-span-2 sm:p-8 lg:col-span-4 lg:row-span-2">
    {/* Background Effects */}
    <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-accent/5 to-transparent opacity-50 transition-opacity duration-300 group-hover:opacity-100" />
    <div class="absolute -top-20 -right-20 size-96 rounded-full bg-primary/10 blur-[100px] transition-all duration-300 group-hover:bg-primary/20" />
    <div class="absolute -bottom-20 -left-20 size-96 rounded-full bg-accent/10 blur-[100px] transition-all duration-300 group-hover:bg-accent/20" />
    <div class="absolute inset-0 z-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-[0.15] mix-blend-overlay brightness-100 contrast-150"></div>

    <div class="relative z-10 flex flex-col items-center justify-center gap-4 sm:gap-5">
      <Heading class="leading-tight" level={1} size="hero">
        <GradientText variant="primary">
          {SITE_CONFIG.hero.title.main}
        </GradientText>
        <br />
        <GradientText variant="primary">
          {SITE_CONFIG.hero.title.highlight}
        </GradientText>
      </Heading>

      <Text class="max-w-md text-balance" size="lg" variant="muted">
        I'm Stevan, {SITE_CONFIG.hero.tagline}.
      </Text>
    </div>
  </div>

  {
    items.map((item) => (
      <Link
        class="group relative flex flex-col justify-between overflow-hidden rounded-2xl border border-white/10 bg-card/60 p-6 backdrop-blur-md transition-all duration-300 hover:scale-[1.02] hover:border-primary/20 lg:col-span-2 lg:row-span-1"
        href={item.href}
        style={{
          '--item-color': item.color,
        }}
        variant="unstyled"
      >
        {/* Background Effects */}
        <div class="absolute inset-0 bg-gradient-to-br from-[color:var(--item-color)]/5 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100" />
        <div class="absolute -top-12 -right-12 size-48 rounded-full bg-[color:var(--item-color)]/10 blur-[60px] transition-all duration-300 group-hover:bg-[color:var(--item-color)]/20" />
        <div class="absolute inset-0 z-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-[0.08] mix-blend-overlay brightness-100 contrast-150 transition-opacity duration-300 group-hover:opacity-[0.15]"></div>

        <div class="relative z-10 flex w-full items-start justify-between">
          <IconBox
            class="bg-white/5 text-[color:var(--item-color)] ring-1 ring-white/10 transition-all duration-300 group-hover:bg-white/10 group-hover:ring-[color:var(--item-color)]/30 group-hover:shadow-glow"
            size="lg"
          >
            <Icon name={item.icon} size={24} />
          </IconBox>

          <div class="rounded-full border border-white/10 bg-black/20 p-2 opacity-0 transition-all duration-300 group-hover:opacity-100 group-hover:border-primary/30">
            <Icon class="text-white/70" name="mdi:arrow-top-right" size={14} />
          </div>
        </div>

        <div class="relative z-10 mt-md">
          <Heading class="mb-1 font-medium text-white transition-colors duration-300 group-hover:text-[color:var(--item-color)]" level={3} size="lg">
            {item.label}
          </Heading>
          <Text class="line-clamp-2" size="sm" variant="muted">
            Explore my {item.label.toLowerCase()} to see what I've been working on.
          </Text>
        </div>
      </Link>
    ))
  }
</div>
