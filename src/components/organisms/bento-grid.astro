---
import { Icon } from 'astro-icon/components';

import { NAV_ITEMS, SITE_CONFIG } from '../../lib/config';
import GradientText from '../atoms/gradient-text.astro';
import Heading from '../atoms/heading.astro';
import IconBox from '../atoms/icon-box.astro';
import Link from '../atoms/link.astro';
import Text from '../atoms/text.astro';

const { items = NAV_ITEMS.filter((i) => i.label !== 'Home') } = Astro.props;

interface Props {
  items?: typeof NAV_ITEMS[number][];
}

const getGridClass = (index: number) => {
  const pattern = [
    'md:col-span-1 md:row-span-1',
    'md:col-span-1 md:row-span-1',
    'md:col-span-2 md:row-span-1',
    'md:col-span-1 md:row-span-2',
  ];
  return pattern[index % pattern.length] || 'col-span-1';
};

const cardBaseStyles = "group relative flex flex-col justify-between overflow-hidden rounded-2xl border border-white/10 bg-black/40 backdrop-blur-md transition-all duration-300 hover:scale-[1.02]";
const glowBaseStyles = "absolute inset-0 bg-linear-to-br opacity-0 transition-opacity duration-500 group-hover:opacity-100";
const blobBaseStyles = "absolute -right-12 -top-12 h-40 w-40 rounded-full blur-[50px] transition-all duration-500";
---

<div class="grid auto-rows-[minmax(180px,auto)] grid-cols-1 gap-4 pb-8 md:grid-cols-3">
  {/* Identity Tile - Main Feature */}
  <div class:list={[cardBaseStyles, "items-center justify-center p-8 text-center md:col-span-2 md:row-span-2"]}>
    {/* Background Glow */}
    <div class:list={[glowBaseStyles, "from-primary/10 to-transparent"]} />
    <div class:list={[blobBaseStyles, "-top-20 -right-20 size-64 bg-primary/20 blur-[80px] group-hover:bg-primary/30"]} />

    <div class="relative z-10 flex flex-col items-center gap-4">
      <Heading class="leading-tight" level={1} size="hero">
        <GradientText variant="primary">
          {SITE_CONFIG.hero.title.main}
        </GradientText>
        <br />
        <GradientText variant="primary">
          {SITE_CONFIG.hero.title.highlight}
        </GradientText>
      </Heading>

      <Text class="max-w-md text-balance" size="lg" variant="muted">
        I'm Stevan, {SITE_CONFIG.hero.tagline}.
      </Text>
    </div>
  </div>

  {
    items.map((item, index) => (
      <Link
        class:list={[
          cardBaseStyles,
          getGridClass(index),
          "p-6"
        ]}
        href={item.href}
        style={{
          '--accent-color': item.color,
        }}
        variant="unstyled"
      >
        {/* Background Gradient/Glow Effect */}
        <div class:list={[glowBaseStyles, "from-(--accent-color)/10 to-transparent"]} />
        <div class:list={[blobBaseStyles, "bg-(--accent-color)/20 group-hover:bg-(--accent-color)/30"]} />

        <div class="relative z-10 flex w-full items-start justify-between">
          <IconBox
            class="bg-white/5 text-(--accent-color) ring-1 ring-white/10 transition-colors group-hover:bg-white/10"
            size="lg"
          >
            <Icon name={item.icon} size={24} />
          </IconBox>

          <div class="rounded-full border border-white/10 bg-black/20 px-3 py-1 opacity-0 transition-all duration-300 group-hover:opacity-100">
            <Icon class="text-white/70" name="mdi:arrow-top-right" size={16} />
          </div>
        </div>

        <div class="relative z-10 mt-4">
          <Heading class="mb-1 font-medium text-white transition-colors group-hover:text-(--accent-color)" level={3} size="lg">
            {item.label}
          </Heading>
          <Text class="line-clamp-2" size="sm" variant="muted">
            Explore my {item.label.toLowerCase()} to see what I've been working on.
          </Text>
        </div>
      </Link>
    ))
  }
</div>
