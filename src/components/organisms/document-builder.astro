---
import { Icon } from 'astro-icon/components';
import { getCollection, getEntry } from 'astro:content';

const stevan = await getEntry('people', 'stevan-pavlovic');
const experiences = await getCollection('experience');

if (!stevan) {
  throw new Error('Stevan profile not found');
}

const profile = {
  email: stevan.data.email,
  location: stevan.data.location,
  name: `${stevan.data.firstName} ${stevan.data.lastName}`,
  phone: "+381 60 123 4567", // Placeholder or add to frontmatter if needed
  role: stevan.data.title,
  summary: stevan.body, // Using body as summary
  website: "stevan.dev"
};

// Sort experiences by startDate descending
const sortedExperiences = experiences.sort((a, b) =>
  new Date(b.data.startDate).getTime() - new Date(a.data.startDate).getTime()
);

const experience = sortedExperiences.map(job => {
  const startYear = new Date(job.data.startDate).getFullYear();
  const endYear = job.data.endDate ? new Date(job.data.endDate).getFullYear() : 'Present';
  return {
    company: job.data.company,
    description: job.data.description, // Short description from frontmatter
    period: `${startYear} â€” ${endYear}`,
    role: job.data.role
  };
});

// @ts-ignore - Assuming skills and education added to frontmatter
const skills = stevan.data.skills || [];
// @ts-ignore
const education = stevan.data.education || [];
---

<section class="relative min-h-screen w-full bg-slate-100 px-4 py-12 print:min-h-0 print:bg-white print:p-0">
  <!-- Toolbar (Hidden when printing) -->
  <div class="animate-in slide-in-from-bottom-6 fixed bottom-8 left-1/2 z-50 flex -translate-x-1/2 gap-4 duration-700 print:hidden">
    <button
      class="flex items-center gap-2 rounded-full bg-slate-900 px-6 py-3 font-semibold text-white shadow-2xl transition-all hover:scale-105 hover:bg-slate-800 active:scale-95"
      id="print-btn"
    >
      <Icon class="size-5" name="mdi:printer" />
      Save as PDF
    </button>
    <div class="rounded-full border border-white/20 bg-white/80 px-6 py-3 text-sm font-medium text-slate-600 shadow-xl backdrop-blur-md">
      <span class="font-bold text-blue-600">Tip:</span> Click any text to edit
    </div>
  </div>

  <!-- A4 Paper Container -->
  <div
    class="relative mx-auto min-h-[297mm] max-w-[210mm] overflow-hidden bg-white shadow-2xl print:min-h-0 print:w-full print:max-w-none print:shadow-none"
    id="resume-paper"
  >
    <!-- Top Accent Line -->
    <div class="h-2 w-full bg-slate-900 print:bg-slate-900"></div>

    <div class="p-12 sm:p-16 print:p-0">

      <!-- Header -->
      <header class="mb-8 flex flex-col items-start justify-between border-b-2 border-slate-100 pb-8 md:flex-row print:mb-6 print:flex-row print:pb-6">
        <div class="space-y-2">
          <h1
            class="-ml-2 rounded-sm px-2 text-4xl font-black tracking-tight text-slate-900 uppercase transition-colors outline-none hover:bg-slate-50 focus:bg-blue-50/50 md:text-5xl"
            contenteditable="true"
          >
            {profile.name}
          </h1>
          <p
            class="-ml-2 rounded-sm px-2 text-xl font-medium text-slate-500 transition-colors outline-none hover:bg-slate-50 focus:bg-blue-50/50"
            contenteditable="true"
          >
            {profile.role}
          </p>
        </div>

        <div class="mt-6 flex flex-col gap-1 text-right text-sm font-medium text-slate-500 md:mt-0 print:mt-0">
          <a class="group flex items-center justify-end gap-2 transition-colors hover:text-blue-600" href={`mailto:${profile.email}`}>
            <span class="outline-none" contenteditable="true">{profile.email}</span>
            <Icon class="size-4 opacity-50 group-hover:opacity-100" name="mdi:email-outline" />
          </a>
          <a class="group flex items-center justify-end gap-2 transition-colors hover:text-blue-600" href={`https://${profile.website}`}>
            <span class="outline-none" contenteditable="true">{profile.website}</span>
            <Icon class="size-4 opacity-50 group-hover:opacity-100" name="mdi:web" />
          </a>
          <div class="flex items-center justify-end gap-2">
            <span class="outline-none" contenteditable="true">{profile.location}</span>
            <Icon class="size-4 opacity-50" name="mdi:map-marker-outline" />
          </div>
          <div class="flex items-center justify-end gap-2">
            <span class="outline-none" contenteditable="true">{profile.phone}</span>
            <Icon class="size-4 opacity-50" name="mdi:phone-outline" />
          </div>
        </div>
      </header>

      <!-- Main Layout -->
      <div class="grid grid-cols-1 gap-12 md:grid-cols-12 print:grid-cols-12 print:gap-8">

        <!-- Left Column (Main Content) -->
        <div class="space-y-10 md:col-span-8 print:col-span-8 print:space-y-8">

          <!-- Profile Summary -->
          <section>
            <h2 class="mb-4 flex items-center gap-2 text-xs font-bold tracking-[0.2em] text-slate-400 uppercase">
              <span class="size-1 rounded-full bg-slate-400"></span> Profile
            </h2>
            <p
              class="-ml-2 rounded-sm px-2 leading-relaxed text-slate-700 transition-colors outline-none hover:bg-slate-50 focus:bg-blue-50/50"
              contenteditable="true"
            >
              {profile.summary}
            </p>
          </section>

          <!-- Experience -->
          <section>
            <h2 class="mb-6 flex items-center gap-2 text-xs font-bold tracking-[0.2em] text-slate-400 uppercase">
              <span class="size-1 rounded-full bg-slate-400"></span> Experience
            </h2>
            <div class="space-y-8 print:space-y-6">
              {experience.map((job) => (
                <div class="group relative">
                  <!-- Hover Action to Delete (Web only) -->
                  <button class="delete-btn absolute top-1 -left-8 text-red-400 opacity-0 transition-opacity group-hover:opacity-100 print:hidden" title="Remove item">
                    <Icon name="mdi:trash-can-outline" />
                  </button>

                  <div class="mb-1 flex items-baseline justify-between">
                    <h3 class="-ml-1 rounded-sm px-1 text-lg font-bold text-slate-900 outline-none hover:bg-slate-50 focus:bg-blue-50/50" contenteditable="true">{job.role}</h3>
                    <span class="rounded-sm px-1 font-mono text-sm whitespace-nowrap text-slate-400 outline-none hover:bg-slate-50 focus:bg-blue-50/50" contenteditable="true">{job.period}</span>
                  </div>
                  <div class="mb-2 -ml-1 inline-block rounded-sm px-1 text-sm font-semibold text-blue-600 outline-none hover:bg-slate-50 focus:bg-blue-50/50" contenteditable="true">{job.company}</div>
                  <p class="-ml-1 rounded-sm px-1 text-sm leading-relaxed text-slate-600 outline-none hover:bg-slate-50 focus:bg-blue-50/50" contenteditable="true">
                    {job.description}
                  </p>
                </div>
              ))}
            </div>
          </section>
        </div>

        <!-- Right Column (Sidebar) -->
        <div class="space-y-10 md:col-span-4 print:col-span-4 print:space-y-8">

          <!-- Skills -->
          <section>
            <h2 class="mb-4 flex items-center gap-2 text-xs font-bold tracking-[0.2em] text-slate-400 uppercase">
              <span class="size-1 rounded-full bg-slate-400"></span> Skills
            </h2>
            <ul class="space-y-2">
              {skills.map(skill => (
                <li
                  class="rounded-sm border-b border-slate-100 px-1 pb-2 text-sm font-medium text-slate-700 transition-colors outline-none hover:bg-slate-50 focus:bg-blue-50/50"
                  contenteditable="true"
                >
                  {skill}
                </li>
              ))}
            </ul>
          </section>

          <!-- Education -->
          <section>
            <h2 class="mb-4 flex items-center gap-2 text-xs font-bold tracking-[0.2em] text-slate-400 uppercase">
              <span class="size-1 rounded-full bg-slate-400"></span> Education
            </h2>
            <div class="space-y-4">
              {education.map(edu => (
                <div>
                  <div class="rounded-sm px-1 text-sm font-bold text-slate-900 outline-none hover:bg-slate-50 focus:bg-blue-50/50" contenteditable="true">{edu.degree}</div>
                  <div class="mt-1 rounded-sm px-1 text-sm text-slate-500 outline-none hover:bg-slate-50 focus:bg-blue-50/50" contenteditable="true">{edu.school}</div>
                  <div class="mt-1 rounded-sm px-1 font-mono text-xs text-slate-400 outline-none hover:bg-slate-50 focus:bg-blue-50/50" contenteditable="true">{edu.year}</div>
                </div>
              ))}
            </div>
          </section>

        </div>
      </div>
    </div>

    <!-- Decorative Watermark (Bottom Right) -->
    <div class="pointer-events-none absolute right-8 bottom-8 text-[10rem] font-black text-slate-50 opacity-50 select-none print:hidden">
      CV
    </div>
  </div>
</section>

<style>
  /* Print Optimization */
  @media print {
    @page {
      margin: 0;
      size: auto;
    }
    :global(body) {
      background: white;
    }
    /* Force background colors/graphics to print */
    * {
      -webkit-print-color-adjust: exact !important;
      print-color-adjust: exact !important;
    }
  }

  /* Editable Field Focus Styles */
  [contenteditable]:focus {
    cursor: text;
  }
</style>

<script>
  import { initResumeGenerator } from "../../lib/resume-generator";
  initResumeGenerator();
</script>
