---
import type { HTMLAttributes } from "astro/types";

import { cn } from "../../lib/cn";
import Heading from "../atoms/Heading.astro";
import Text from "../atoms/Text.astro";
import IconBox from "../molecules/icon-box.astro";

interface Props extends HTMLAttributes<"section"> {
  description: string;
  icon?: string;
  title: string;
}

const { class: className, description, icon, title, ...props } = Astro.props;
---

<section class:list={cn("relative py-12 md:py-16", className)} {...props}>
  {/* Ambient Background Glow */}
  <div class="pointer-events-none absolute -top-24 -left-24 size-96 rounded-full bg-primary/10 blur-[120px]"></div>

  <div class="relative flex flex-col gap-6">
    {icon && <IconBox class="shadow-glow-primary border-primary/20 bg-primary/5 text-primary" icon={icon} size="xl" />}

    <div class="flex max-w-2xl flex-col gap-4">
      <Heading class="text-4xl tracking-tight sm:text-5xl md:text-6xl" level={1} size="display">
        {title}
      </Heading>

      <Text class="text-lg leading-relaxed text-muted-foreground/80 md:text-xl" size="lg">
        {description}
      </Text>
    </div>
  </div>
</section>
