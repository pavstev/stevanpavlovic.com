---
import { SITE_CONFIG } from '../../lib/config';
import GradientText from '../atoms/gradient-text.astro';
import Heading from '../atoms/heading.astro';
import Text from '../atoms/text.astro';
import Stack from '../molecules/stack.astro';
---

<section class="flex flex-col items-center justify-center py-12 text-center">
  <Stack align="center" gap={6}>
    <Stack align="center" gap={4}>
      <Heading level={1} size="hero">
        <GradientText variant="primary">
          {SITE_CONFIG.hero.title.main}
        </GradientText>
        <br />
        <GradientText variant="primary">
          {SITE_CONFIG.hero.title.highlight}
        </GradientText>
      </Heading>

      <Text class="max-w-xl" size="lg" variant="muted">
        I'm Stevan, {SITE_CONFIG.hero.tagline}.
      </Text>
    </Stack>
  </Stack>
</section>
