---
import { NAV_ITEMS } from '../../lib/config';
import Card from '../molecules/card.astro';
import Grid from '../molecules/grid.astro';

const items = NAV_ITEMS.filter(i => i.label !== 'Home');
---

<Grid cols={{ base: 2, sm: 2 }} gap={4}>
  {
    items.map((item) => (
      <Card
        class="h-full min-h-[160px]"
        href={item.href}
        icon={item.icon}
        style="default"
        title={item.label}
        variant="icon"
      />
    ))
  }
</Grid>
