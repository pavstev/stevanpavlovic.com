---
import Heading from '../atoms/heading.astro';
import Stack from '../atoms/stack.astro';
import Text from '../atoms/text.astro';
import Container from '../molecules/container.astro';

interface Props {
  class?: string;
  description?: string;
  level?: 1 | 2 | 3 | 4 | 5 | 6;
  title: string;
}

const {
  class: className,
  description,
  level = 1,
  title,
} = Astro.props;
---

<Container class:list={className}>
  <Stack gap={6}>
    <slot name="eyebrow" />

    <Heading class:list={["leading-tight", className]} level={level} size="hero">
      {title}
    </Heading>

    {description && (
      <Text size="lg" variant="muted">
        {description}
      </Text>
    )}

    <slot name="actions" />
    <slot />
  </Stack>
</Container>
