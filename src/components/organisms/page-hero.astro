---
import Heading from '../atoms/heading.astro';
import Text from '../atoms/text.astro';
import Container from '../molecules/container.astro';
import Stack from '../atoms/stack.astro';

interface Props {
  class?: string;
  description?: string;
  level?: 1 | 2 | 3 | 4 | 5 | 6;
  title: string;
}

const {
  class: className,
  description,
  level = 1,
  title,
} = Astro.props;
---

<Container class:list={className}>
  <Stack gap={8}>
    <Heading class="leading-tight" level={level} size="hero">
      {title}
    </Heading>
    {description && (
      <Text class="max-w-2xl" size="lg" variant="muted">
        {description}
      </Text>
    )}
    <slot />
  </Stack>
</Container>
