---
import { cn } from '../../lib/cn';
import HeroAvatar from '../molecules/hero-avatar';
import HeroContent from '../molecules/hero-content.astro';

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<section class:list={cn("relative", className)}>
  <div class:list={cn("relative z-10 grid grid-cols-1 items-center gap-12 md:grid-cols-[1fr_auto] md:items-start")}>
    <!-- Content -->
    <HeroContent class="order-2 md:order-1" />

    <!-- Avatar Section -->
    <div class="order-1 flex justify-center md:order-2 md:justify-end">
      <HeroAvatar className="group" client:load />
    </div>
  </div>
</section>
