---
import HeroAvatar from "../molecules/hero-avatar.astro";
import HeroContent from "../molecules/hero-content.astro";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<section class:list={["relative overflow-hidden", className]}>
  <div class:list={"relative z-10 grid grid-cols-1 items-center gap-8 md:grid-cols-[1fr_auto] md:items-start"}>
    <!-- Content -->
    <HeroContent class="order-2 md:order-1" />

    <!-- Avatar Section -->
    <div class="order-1 flex justify-center md:order-2 md:justify-end">
      <HeroAvatar class="group" />
    </div>
  </div>
</section>
