---
import type { HTMLAttributes } from 'astro/types';

import { cva, type VariantProps } from 'class-variance-authority';

import { cn } from '../../lib/cn';
import Container from '../molecules/container.astro';

const section = cva('py-xl w-full', {
  defaultVariants: {
    width: 'default',
  },
  variants: {
    width: {
      default: 'max-w-6xl',
      full: 'max-w-full',
      prose: 'max-w-prose',
      sm: 'max-w-3xl',
    },
  },
});

interface Props
  extends HTMLAttributes<'div'>,
    VariantProps<typeof section> {
  as?: string;
}

const { as: Tag = 'div', class: className, width, ...props } = Astro.props;
---

<Container
  as={Tag}
  class:list={cn(section({ width }), className)}
  {...props}
>
  <slot />
</Container>
