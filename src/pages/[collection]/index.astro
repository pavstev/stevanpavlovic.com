import type { GetStaticPaths } from 'astro';



export const getStaticPaths = (() => {
  return [
    { params: { collection: 'blog' as const } },
    { params: { collection: 'projects' as const } },
    { params: { collection: 'experience' as const } },
  ];
}) satisfies GetStaticPaths;

const { collection } = Astro.params;

const search = Astro.url.search;
console.log('Redirecting with search:', search);

if (collection === 'blog') {
  return Astro.redirect(`/blog/grid${search}`);
} else if (collection === 'projects') {
  return Astro.redirect(`/projects/grid${search}`);
} else if (collection === 'experience') {
  return Astro.redirect(`/experience/list${search}`);
}

return Astro.redirect(`/${search}`);
