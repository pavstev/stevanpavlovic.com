---
import { type CollectionEntry, getCollection, render } from 'astro:content';

import PostView from '../../components/organisms/post-view.astro';

export const getStaticPaths = async () => {
  const experiences = await getCollection('experience');
  return experiences.map((experience) => ({
    params: { slug: experience.id },
    props: experience,
  }));
};
type Props = CollectionEntry<'experience'>;

const experience = Astro.props;
const { Content } = await render(experience);
---

<PostView data={experience.data} type="experience">
  <Content />
</PostView>
