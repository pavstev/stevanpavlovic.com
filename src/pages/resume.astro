---
import CopyrightText from "@components/custom/common/copyright-text.astro";
import PageLayout from "@components/layout/page-layout.astro";
import { Badge } from "@components/ui/badge.tsx";
import { Button } from "@components/ui/button.tsx";
import { Icon } from "@components/ui/icon.tsx";
import { Separator } from "@components/ui/separator.tsx";
import { formatDate, getDuration, getResumeData, getSocialIcon } from "@server/resume-loader.ts";

export const prerender = true;

const resumeData = await getResumeData(Astro.site);
---

<PageLayout
  align="left"
  description={`Professional resume of ${resumeData.basics.name} - ${resumeData.basics.label}`}
  title="Resume"
>
  <div class="mx-auto max-w-5xl px-6 py-8 md:px-12 md:py-12">
    <header class="mb-10 border-b pb-8">
      <div class="flex flex-col gap-6 md:flex-row md:items-start md:justify-between">
        <div class="flex-1">
          <h1 class="text-foreground text-4xl font-bold tracking-tight md:text-5xl">
            {resumeData.basics.name}
          </h1>
          <p class="text-primary mt-2 text-xl font-medium">
            {resumeData.basics.label}
          </p>

          <div
            class="text-muted-foreground mt-4 flex flex-wrap items-center gap-x-6 gap-y-2 text-sm"
          >
            <a
              class="hover:text-foreground flex items-center gap-1.5 transition-colors"
              href={`mailto:${resumeData.basics.email}`}
            >
              <Icon className="size-4" name="mdi:email-outline" />
              {resumeData.basics.email}
            </a>
            <span class="flex items-center gap-1.5">
              <Icon className="size-4" name="mdi:map-marker-outline" />
              {resumeData.basics.location.city}, {resumeData.basics.location.countryCode}
            </span>
            {
              resumeData.basics.url && (
                <a
                  class="hover:text-foreground flex items-center gap-1.5 transition-colors"
                  href={resumeData.basics.url}
                  rel="noopener noreferrer"
                  target="_blank"
                >
                  <Icon className="size-4" name="mdi:web" />
                  {new URL(resumeData.basics.url).hostname}
                </a>
              )
            }
          </div>
        </div>

        <div class="flex flex-wrap gap-2 md:flex-col md:items-end">
          {
            resumeData.basics.profiles.map((profile) => (
              <a
                class="text-muted-foreground hover:text-foreground flex items-center gap-2 text-sm transition-colors"
                href={profile.url}
                rel="noopener noreferrer"
                target="_blank"
              >
                <Icon className="size-4" name={getSocialIcon(profile.network)} />
                <span class="hidden md:inline">{profile.network}</span>
                <span class="md:hidden">{profile.username}</span>
              </a>
            ))
          }
        </div>
      </div>

      <p class="text-muted-foreground mt-6 max-w-3xl leading-relaxed">
        {resumeData.basics.summary}
      </p>
    </header>

    <div class="grid gap-10 lg:grid-cols-[1fr_280px]">
      <div class="space-y-10">
        <section>
          <div class="mb-6 flex items-center gap-3">
            <div class="bg-primary/10 flex size-8 items-center justify-center rounded-lg">
              <Icon className="text-primary size-4" name="mdi:briefcase-outline" />
            </div>
            <h2 class="text-xl font-bold tracking-tight">Professional Experience</h2>
          </div>

          <div class="relative space-y-8">
            <div class="bg-border absolute top-2 bottom-2 left-[11px] w-px"></div>

            {
              resumeData.work.map((job) => (
                <div class="relative pl-8">
                  <div class="border-background bg-primary ring-primary/20 absolute top-1.5 left-0 size-6 rounded-full border-2 ring-2" />

                  <div class="group">
                    <div class="flex flex-col gap-1 sm:flex-row sm:items-start sm:justify-between">
                      <div>
                        <h3 class="text-foreground text-lg font-semibold">{job.position}</h3>
                        <div class="flex items-center gap-2 text-sm">
                          {job.url ? (
                            <a
                              class="text-primary font-medium hover:underline"
                              href={job.url}
                              rel="noopener noreferrer"
                              target="_blank"
                            >
                              {job.name}
                            </a>
                          ) : (
                            <span class="text-muted-foreground font-medium">{job.name}</span>
                          )}
                        </div>
                      </div>
                      <div class="text-muted-foreground flex items-center gap-2 text-sm">
                        <Icon className="size-3.5" name="mdi:calendar-range" />
                        <span>
                          {formatDate(job.startDate)} â€” {formatDate(job.endDate)}
                        </span>
                        <span class="text-xs">({getDuration(job.startDate, job.endDate)})</span>
                      </div>
                    </div>

                    <p class="text-muted-foreground mt-2 text-sm leading-relaxed">{job.summary}</p>

                    {job.highlights.length > 0 && (
                      <ul class="mt-3 space-y-1.5">
                        {job.highlights.slice(0, 4).map((highlight) => (
                          <li class="text-muted-foreground flex items-start gap-2 text-sm">
                            <Icon
                              className="mt-1 size-3 shrink-0 text-primary/70"
                              name="mdi:circle-small"
                            />
                            <span>{highlight}</span>
                          </li>
                        ))}
                      </ul>
                    )}
                  </div>
                </div>
              ))
            }
          </div>
        </section>

        <Separator />

        <section>
          <div class="mb-6 flex items-center gap-3">
            <div class="bg-primary/10 flex size-8 items-center justify-center rounded-lg">
              <Icon className="text-primary size-4" name="mdi:rocket-launch-outline" />
            </div>
            <h2 class="text-xl font-bold tracking-tight">Featured Projects</h2>
          </div>

          <div class="grid gap-6 sm:grid-cols-2">
            {
              resumeData.projects.slice(0, 4).map((project) => (
                <div class="group border-border/50 bg-card/50 hover:border-border hover:bg-card rounded-lg border p-4 transition-all hover:shadow-sm">
                  <div class="flex items-start justify-between gap-2">
                    <h3 class="text-foreground group-hover:text-primary font-semibold transition-colors">
                      {project.name}
                    </h3>
                    {project.url && (
                      <a
                        class="text-muted-foreground hover:text-foreground transition-colors"
                        href={project.url}
                        rel="noopener noreferrer"
                        target="_blank"
                      >
                        <Icon className="size-4" name="mdi:open-in-new" />
                      </a>
                    )}
                  </div>

                  <p class="text-muted-foreground mt-2 line-clamp-2 text-sm leading-relaxed">
                    {project.description}
                  </p>

                  <div class="mt-3 flex flex-wrap gap-1">
                    {project.keywords.slice(0, 4).map((keyword) => (
                      <span class="bg-secondary text-secondary-foreground inline-flex items-center rounded px-2 py-0.5 text-[10px] font-medium">
                        {keyword}
                      </span>
                    ))}
                  </div>
                </div>
              ))
            }
          </div>
        </section>
      </div>

      <aside class="space-y-8">
        <section>
          <div class="mb-4 flex items-center gap-2">
            <Icon className="text-primary size-4" name="mdi:tools" />
            <h2 class="font-bold tracking-tight">Technical Skills</h2>
          </div>

          <div class="space-y-4">
            {
              resumeData.skills.map((skillGroup) => (
                <div>
                  <h3 class="text-muted-foreground mb-2 text-xs font-semibold tracking-wider uppercase">
                    {skillGroup.name}
                  </h3>
                  <div class="flex flex-wrap gap-1.5">
                    {skillGroup.keywords.map((keyword) => (
                      <Badge className="text-xs font-normal" variant="secondary">
                        {keyword}
                      </Badge>
                    ))}
                  </div>
                </div>
              ))
            }
          </div>
        </section>

        <Separator />

        <section>
          <div class="mb-4 flex items-center gap-2">
            <Icon className="text-primary size-4" name="mdi:information-outline" />
            <h2 class="font-bold tracking-tight">Quick Info</h2>
          </div>

          <div class="space-y-3 text-sm">
            <div class="text-muted-foreground flex items-center gap-2">
              <Icon className="size-4" name="mdi:account-check" />
              <span>Open to opportunities</span>
            </div>
            <div class="text-muted-foreground flex items-center gap-2">
              <Icon className="size-4" name="mdi:earth" />
              <span>Remote & On-site</span>
            </div>
            <div class="text-muted-foreground flex items-center gap-2">
              <Icon className="size-4" name="mdi:clock-outline" />
              <span>Flexible hours</span>
            </div>
          </div>
        </section>

        <Separator />

        <section>
          <div class="space-y-2">
            <a class="block" href={`mailto:${resumeData.basics.email}`}>
              <Button className="w-full gap-2" size="sm">
                <Icon className="size-4" name="mdi:email-outline" />
                Contact Me
              </Button>
            </a>
            <a class="block" href="/resume.json" rel="noopener noreferrer" target="_blank">
              <Button className="w-full gap-2" size="sm" variant="outline">
                <Icon className="size-4" name="mdi:code-json" />
                JSON Resume
              </Button>
            </a>
          </div>
        </section>
      </aside>
    </div>

    <footer class="mt-16 border-t pt-8 text-center">
      <CopyrightText name={resumeData.basics.name} />
      <p class="text-muted-foreground/70 mt-1 text-xs">
        This CV was generated from JSON Resume format.
      </p>
    </footer>
  </div>
</PageLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>